# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /schedule                 controllers.PointController.index
POST        /schedule/add             controllers.PointController.addUser
GET         /schedule/delete          controllers.PointController.deletePoint(id: Long)

GET         /group                    controllers.GroupController.index
POST        /group/add                controllers.GroupController.addGroup

GET         /                         controllers.ScheduleController.index
POST        /filter                   controllers.ScheduleController.checkGroup

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

#API
GET         /api/group/:name          controllers.JSONAPIGroupController.getGroupJson(name)
GET         /api/teacher/:tchr        controllers.JSONAPITeacherController.getTeacher(tchr)