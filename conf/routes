# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /schedule                 controllers.Application.index
POST        /schedule/add             controllers.Application.addUser
GET         /schedule/delete          controllers.Application.deletePoint(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

#API
GET         /api/group/:name          controllers.JSONAPIGroupController.getGroupJson(name)
GET         /api/teacher/:tchr        controllers.JSONAPITeacherController.getTeacher(tchr)